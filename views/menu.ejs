<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1>Full Menu</h1>

  <h2>Mains</h2>
  <% RESTAURANT.menu.forEach((item) => { %>
    <% if(item.category === "mains" && item.rating ){ %>
      <pre><%= item.name %>   $<%= item.price %>   Rating:<%= item.rating %> 
        Description:<%= item.details %></pre>
      <% } %>  
    <% }) %>      


  <h2>Desserts</h2>
  <% RESTAURANT.menu.forEach((item) => { %>      
    <% if(item.category === "desserts"){ %>
      <pre><%= item.name %>   $<%= item.price %>   Rating:<%= item.rating %> 
        Description:<%= item.details %></pre>
      <% } %>  
  <% }) %>

  <h2>Sides</h2>
  <% RESTAURANT.menu.forEach((item) => { %>
    <% if(item.category === "sides"){ %>
      <pre><%= item.name %>   $<%= item.price %>   Rating:<%= item.rating %> 
        Description:<%= item.details %></pre>
    <% } %>
  <% }) %>
</body>
</html>
